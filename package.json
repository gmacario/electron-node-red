{
    "name": "my-first-app",
    "version": "0.0.1",
    "description": "My first simple Electron app",
    "main": "index.js",
    "scripts": {
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "electron ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gmacario/electron-node-red.git"
    },
    "keywords": [],
    "author": {
        "name": "Gianpaolo Macario",
        "email": "gmacario@gmail.com"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/gmacario/electron-node-red/issues"
    },
    "homepage": "https://github.com/gmacario/electron-node-red#readme",
    "devDependencies": {
        "electron": "^7.1.4",
        "electron-builder": "^21.2.0"
    },
    "build": {
        "appId": "com.gmacario.electron.my-first-app",
        "productName": "My first Electron App",
        "copyright": "Copyright Â© 2019 Gianpaolo Macario",
        "linux": {
            "target": [
                "apk",
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "armv7l"
                    ]
                }
            ],
            "synopsis": "Node-RED Low Code development",
            "category": "Development"
        },
        "win": {
            "target": [
                {
                    "target": "msi",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    }
}
